<link rel="stylesheet" href="/css/paginaPrincipal.css">

<main>
    <!-- Noticias generales -->
    <section class="liser-featured-news">
      <div class="liser-support-grid"></div>
      <div class="liser-band">
        <% politica.forEach((noticia) => { %>
          <div class="liser-item">
            <a href="#" class="liser-card">
              <div class="liser-thumb" style="background-image: url(<%= noticia.imagen || 'https://via.placeholder.com/150' %>);"></div>
              <article>
                <h1><i class="fas fa-newspaper"></i> <%= noticia.titular %></h1>
                <p><%= noticia.subtitulo %></p>
                <span class="liser-category">Política</span>
                <span class="liser-date"><i class="fas fa-calendar-alt"></i> <%= new Date(noticia.fechaPublicacion).toLocaleDateString() %></span>
              </article>
            </a>
          </div>
        <% }) %>
      </div>
    </section>
  
    <!-- Sección Tecnología -->
    <section class="liser-news-section">
      <div class="liser-container2">
        <div class="liser-main-content">
          <div class="liser-section-header">
            <h2><i class="fas fa-laptop-code"></i> Tecnología</h2>
            <a href="#" class="liser-ver-mas-btn">Ver más</a>
          </div>
          <div class="liser-band liser-tecnologia-section">
            <% tecnologia.forEach((noticia) => { %>
              <div class="liser-item">
                <a href="#" class="liser-card">
                  <div class="liser-thumb" style="background-image: url(<%= noticia.imagen || 'https://via.placeholder.com/150' %>);"></div>
                  <article>
                    <h1><i class="fas fa-newspaper"></i> <%= noticia.titular %></h1>
                    <p><%= noticia.subtitulo %></p>
                    <span class="liser-category">Tecnología</span>
                    <span class="liser-date"><i class="fas fa-calendar-alt"></i> <%= new Date(noticia.fechaPublicacion).toLocaleDateString() %></span>
                  </article>
                </a>
              </div>
            <% }) %>
          </div>
        </div>
      </div>
    </section>
  
    <!-- Actualidad -->
    <section>
      <div class="liser-section-header">
        <h2><i class="fas fa-clock"></i> Actualidad</h2>
      </div>
      <div class="liser-band liser-ultimas-noticias-section">
        <% actualidad.forEach((noticia) => { %>
          <div class="liser-item">
            <a href="#" class="liser-card">
              <div class="liser-thumb" style="background-image: url(<%= noticia.imagen || 'https://via.placeholder.com/150' %>);"></div>
              <article>
                <h1><i class="fas fa-newspaper"></i> <%= noticia.titular %></h1>
                <p><%= noticia.entrada %></p>
                <span class="liser-category"><%= noticia.categoria %></span>
                <span class="liser-date"><i class="fas fa-calendar-alt"></i> <%= new Date(noticia.fechaPublicacion).toLocaleDateString() %></span>
              </article>
            </a>
          </div>
        <% }) %>
      </div>
    </section>


     <!-- Sección Finanzas -->
     <section class="liser-news-section">
        <div class="liser-container2">
          <div class="liser-main-content">
            <div class="liser-section-header">
              <h2><i class="fas fa-laptop-code"></i> Finanzas</h2>
              <a href="#" class="liser-ver-mas-btn">Ver más</a>
            </div>
            <div class="liser-band liser-tecnologia-section">
              <% finanzas.forEach((noticia) => { %>
                <div class="liser-item">
                  <a href="#" class="liser-card">
                    <div class="liser-thumb" style="background-image: url(<%= noticia.imagen || 'https://via.placeholder.com/150' %>);"></div>
                    <article>
                      <h1><i class="fas fa-newspaper"></i> <%= noticia.titular %></h1>
                      <p><%= noticia.subtitulo %></p>
                      <span class="liser-category">Tecnología</span>
                      <span class="liser-date"><i class="fas fa-calendar-alt"></i> <%= new Date(noticia.fechaPublicacion).toLocaleDateString() %></span>
                    </article>
                  </a>
                </div>
              <% }) %>
            </div>
          </div>
        </div>
      </section>


